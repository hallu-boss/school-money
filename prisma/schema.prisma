datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Next auth part =================================
model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}
 
model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}
 
// Optional for WebAuthn support
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([userId, credentialID])
}
// ================================================

model User {
  id            String          @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name          String?
  email         String          @unique
  password      String?
  image         String?
 
  bankAccount        BankAccount?
  bankAccountId      String? @unique

  children           Child[]
  memberships        ClassMembership[]
  createdCollections Collection[]
  createdClasses     Class[]
  createdInvoices    Invoice[]
  transactions       Transaction[]

  // next auth
  emailVerified DateTime?
  accounts      Account[]
  sessions      Session[]
  Authenticator Authenticator[]
}

model BankAccount {
  id           String    @id @default(uuid())
  createdAt    DateTime  @default(now())

  iban         String?   @unique
  balance      Decimal   @default(0) @db.Decimal(12, 2)

  // powiązanie 1:1 z user lub collection (co najwyżej jedno z nich nie-null)
  user         User?     @relation(fields: [userId], references: [id])
  userId       String?   @unique

  collection   Collection? @relation(fields: [collectionId], references: [id])
  collectionId String?   @unique

  // ledger relations
  transactionsFrom Transaction[] @relation("FromAccount")
  transactionsTo   Transaction[] @relation("ToAccount")
}

model Transaction {
  id            String       @id @default(uuid())
  createdAt     DateTime     @default(now())
  type          TransactionType
  amount        Decimal      @db.Decimal(10, 2)
  title         String

  // ledger
  fromAccount   BankAccount? @relation("FromAccount", fields: [fromAccountId], references: [id])
  fromAccountId String?
  toAccount     BankAccount? @relation("ToAccount", fields: [toAccountId], references: [id])
  toAccountId   String?

  // user performing
  user          User         @relation(fields: [userId], references: [id])
  userId        String

  // domain refs
  child         Child?       @relation("ChildTransactions", fields: [childId], references: [id])
  childId       String?

  collection    Collection?  @relation(fields: [collectionId], references: [id])
  collectionId  String?

  // 1:1 ⟻→ Payment (podstawowa płatność)
  payment       Payment?

  // 1:N — transakcja może być refundem dla jednego paymentu
  refundForPayment     Payment?     @relation("RefundRelation")
}

enum TransactionType {
  PAYMENT             // rodzic -> konto kolekcji
  REFUND              // konto kolekcji -> rodzic
  WITHDRAWAL          // konto kolekcji -> skarbnik (user)
  TREASURER_DEPOSIT   // skarbnik -> konto kolekcji (np. oddanie)
  COLLECTION_REFUND   // masowy zwrot po anulowaniu zbiórki (kolekcja -> rodzice)
}

model Child {
  id              String            @id @default(uuid())
  createdAt       DateTime          @default(now())

  name            String
  avatarUrl       String?

  Parent            User?             @relation(fields: [parentId], references: [id])
  parentId          String?

  membership      ClassMembership?  @relation(fields: [membershipId], references: [id])
  membershipId    String?

  transactions    Transaction[]     @relation("ChildTransactions")
  participants    CollectionParticipant[]
}

model School {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  name      String

  classes   Class[]
}

model Class {
  id          String            @id @default(uuid())
  createdAt   DateTime          @default(now())

  createdBy   User              @relation(fields: [createdById], references: [id])
  createdById String

  name        String
  accessCode  String?           @unique
  isArchived  Boolean           @default(false)

  School      School?           @relation(fields: [schoolId], references: [id])
  schoolId    String?

  memberships ClassMembership[]
  collections Collection[]
}

model ClassMembership {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  classId   String

  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  children  Child[]
  userRole  ClassMembershipRole

  invitedBy String?

  @@unique([userId, classId])
}

enum ClassMembershipRole {
  PARENT
  TREASURER
}

model Collection {
  id             String             @id @default(uuid())
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  state          CollectionState    @default(ACTIVE)
  title          String
  description    String?
  coverUrl       String?
  startAt        DateTime
  endAt          DateTime
  amountPerChild Decimal            @db.Decimal(10, 2)

  class          Class              @relation(fields: [classId], references: [id])
  classId        String

  author         User               @relation(fields: [authorId], references: [id])
  authorId       String
  
  bankAccount        BankAccount?
  bankAccountId      String?

  invoices       Invoice[]
  transactions   Transaction[]
  participants   CollectionParticipant[]
}

enum CollectionState {
  ACTIVE
  CANCELLED
  CLOSED
}
model CollectionParticipant {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  child         Child      @relation(fields: [childId], references: [id])
  childId       String

  collection    Collection @relation(fields: [collectionId], references: [id])
  collectionId  String

  joinedAt      DateTime   @default(now())
  leftAt        DateTime?
  isActive      Boolean    @default(true)

  payments      Payment[]

  @@unique([childId, collectionId])
}

model Payment {
  id            String       @id @default(uuid())
  createdAt     DateTime     @default(now())

  participant   CollectionParticipant @relation(fields: [participantId], references: [id])
  participantId String

  // powiązanie z transakcją wpłaty
  transaction   Transaction  @relation(fields: [transactionId], references: [id])
  transactionId String @unique

  // refund powiązany z Transaction.type = REFUND / COLLECTION_REFUND
  refundTransaction   Transaction? @relation("RefundRelation", fields: [refundTransactionId], references: [id])
  refundTransactionId String? @unique

  status        PaymentStatus @default(COMPLETED)
  note          String?
}

enum PaymentStatus {
  COMPLETED
  REFUNDED
  CANCELLED
}

model Invoice {
  id           String     @id @default(uuid())
  createdAt    DateTime   @default(now())
  createdBy    User       @relation(fields: [createdById], references: [id])
  createdById  String
  Collection   Collection @relation(fields: [collectionId], references: [id])
  collectionId String
  fileUrl      String
  description  String
}

